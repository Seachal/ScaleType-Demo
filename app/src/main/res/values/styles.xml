<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="RadioGroupLabel" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:fontFamily">serif</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
